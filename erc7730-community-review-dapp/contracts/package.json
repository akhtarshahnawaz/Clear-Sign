{
  "name": "erc7730-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for ERC7730 Community Review DApp",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://127.0.0.1:8545 --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url $SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $MAINNET_RPC_URL --broadcast --verify",
    "generate-abi": "node scripts/generate-abi.js",
    "postbuild": "npm run generate-abi",
    "clean": "forge clean && rm -rf out cache",
    "coverage": "forge coverage",
    "gas-report": "forge test --gas-report"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "foundry",
    "erc7730",
    "smart-contracts"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "foundry": "latest"
  }
}
